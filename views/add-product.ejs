<div class="pb-5 pt-5 mt-5 container main-container">
    <div class="w-75 card p-4 mx-auto">
        <form action="/add-product" method="POST">
            <h4 class="text-center">Add Product</h6>
                <div class="form-group">
                    <label for="name">Product Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="imageUrl">Product ImageUrl</label>
                    <input type="text" class="form-control" id="imageUrl" name="imageUrl">
                </div>
                <div class="form-group">
                    <label for="price">Product Price</label>
                    <input type="number" min="0" class="form-control" id="price" name="price">
                </div>
                <button type="submit" class="btn btn-success btn-lg add-product-btn border-0">Add Product</button>
        </form>

    </div>









</div>

